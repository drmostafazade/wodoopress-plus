<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_woo_config_form" model="ir.ui.view">
            <field name="name">woo.config.form</field>
            <field name="model">woo.config</field>
            <field name="arch" type="xml">
                <form string="تنظیمات WooCommerce">
                    <header>
                        <button name="test_connection" 
                                type="object" 
                                string="تست اتصال" 
                                class="btn-primary"/>
                        <field name="connection_status" 
                               widget="badge" 
                               decoration-success="connection_status == 'connected'"
                               decoration-danger="connection_status == 'error'"
                               decoration-muted="connection_status == 'not_tested'"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="نام تنظیمات"/>
                            </h1>
                        </div>
                        <group>
                            <group string="اطلاعات اتصال">
                                <field name="store_url" placeholder="https://example.com"/>
                                <field name="consumer_key" placeholder="ck_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"/>
                                <field name="consumer_secret" password="True" placeholder="cs_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"/>
                            </group>
                            <group string="وضعیت">
                                <field name="active"/>
                                <field name="last_connection_test" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_woo_config_tree" model="ir.ui.view">
            <field name="name">woo.config.tree</field>
            <field name="model">woo.config</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="store_url"/>
                    <field name="connection_status" widget="badge"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_woo_config_search" model="ir.ui.view">
            <field name="name">woo.config.search</field>
            <field name="model">woo.config</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="store_url"/>
                    <filter name="active" string="فعال" domain="[('active', '=', True)]"/>
                    <filter name="connected" string="متصل" domain="[('connection_status', '=', 'connected')]"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_woo_config" model="ir.actions.act_window">
            <field name="name">تنظیمات WooCommerce</field>
            <field name="res_model">woo.config</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    تنظیمات جدید ایجاد کنید
                </p>
                <p>
                    برای شروع، اطلاعات اتصال WooCommerce خود را وارد کنید
                </p>
            </field>
        </record>
    </data>
</odoo>
